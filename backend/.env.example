# CinePulse AI - Environment Configuration

# Core Settings
APP_NAME="CinePulse AI"
DEBUG=True
API_V1_STR="/api/v1"

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# Database Configuration (PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=cinepulse
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# External API Keys (Required for Data Sync)
# Get TMDB Key: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here
SERPAPI_API_KEY=your_serpapi_api_key
# Get OMDB Key: http://www.omdbapi.com/apikey.aspx
OMDB_API_KEY=your_omdb_api_key_here
FIRECRAWL_API_KEY=your_firecrawl_api_key
=your_google_api_key_for_gemini_3.0

# Recommendation Weights (Must sum to ~1.0)
EMOTION_WEIGHT=0.30
INTENT_WEIGHT=0.25
ARC_WEIGHT=0.20
CONTEXT_WEIGHT=0.15
PERSONALITY_WEIGHT=0.10
